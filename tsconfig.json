{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jest",
      "jasmine"
    ],
    "strict": false,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./src/**/*"
  ]
}